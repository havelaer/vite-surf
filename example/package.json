    "express": "^5.0.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.27.0",
    "react": "^18.3.1",
    "sirv": "^3.0.0",
    "typescript": "^5.6.3",
    "vite": "^5.4.10"
  }
}
